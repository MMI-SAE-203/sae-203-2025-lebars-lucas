---
import CardPartenaires from '../components/CardPartenaires.astro';
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import { SortallPartenaires } from '../../backend/backend.mjs';

const Partenaires = await SortallPartenaires();
console.log(Partenaires);

---

<Layout title="Festiv'Halloween">
	<head>
		<link href="https://fonts.googleapis.com/css2?family=Creepster&display=swap" rel="stylesheet">
	</head>
  
	  <body>
		<div class="flex flex-col lg:flex-row items-center justify-center px-4 py-10">
			<!-- Conteneur image et texte -->
			<div class="flex flex-col lg:flex-row items-center lg:space-x-4">
			  <!-- Image à gauche, plus proche du texte sur grand écran -->
			  <div class="flex-shrink-0 mb-6 lg:mb-0">
				<img src="/src/assets/accueil-img.png" alt="hero-image" class="w-full sm:w-72 md:w-80 lg:w-96 h-auto" />
			  </div>
		  
			  <!-- Texte et bouton à droite -->
			  <div class="text-center lg:text-left flex flex-col items-center lg:items-start">
				<h1 class="text-xl sm:text-3xl md:text-4xl font-extrabold text-orange-600 mb-4 drop-shadow-2xl">
				  Plongez dans l’horreur, vivez l’expérience Festiv'Halloween !
				</h1>
		  
				<button class="bg-orange-600 text-gray-900 font-bold py-3 px-6 rounded-lg text-xl shadow-lg 
							   border-4 border-gray-900 transition-transform transform hover:scale-110 
							   hover:bg-orange-700 hover:shadow-orange-500 glow">
				  <h1>Entrez... si vous l'osez ! </h1>
				</button>
			  </div>
			</div>
		  </div>
  
  <hr class="my-6 mx-auto w-11/12 sm:w-3/4 md:w-1/2 border-t-4 border-orange-600">


  <section class="grid grid-cols-1 md:grid-cols-3 gap-6 px-6 py-10">
	<!-- Carte festival -->
	<div class="bg-gray-900 text-white rounded-xl shadow-lg p-6 text-center transform transition duration-300 hover:scale-105">
		<img src="/src/assets/festival-img.png" alt="Infos pratiques" class="mx-auto mb-4 w-20 h-20">
		<h2 class="text-2xl font-bold text-orange-500">Le festival</h2>
		<p class="mt-2 text-gray-300">Accédez aux informations sur le festival.</p>
		<a href="/festival" class="inline-block mt-4 bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-700">
		  Voir plus
		</a>
	  </div>

	<!-- Carte Programme -->
	<div class="bg-gray-900 text-white rounded-xl shadow-lg p-6 text-center transform transition duration-300 hover:scale-105">
	  <img src="/src/assets/programme.webp" alt="Programme" class="mx-auto mb-4 w-20 h-20">
	  <h2 class="text-2xl font-bold text-orange-500">Programme</h2>
	  <p class="mt-2 text-gray-300">Découvrez les événements et animations prévues.</p>
	  <a href="/Programmes" class="inline-block mt-4 bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-700">
		Voir plus
	  </a>
	</div>
  
	<!-- Carte Invités -->
	<div class="bg-gray-900 text-white rounded-xl shadow-lg p-6 text-center transform transition duration-300 hover:scale-105">
	  <img src="/src/assets/invites.webp" alt="Invités" class="mx-auto mb-4 w-20 h-20">
	  <h2 class="text-2xl font-bold text-orange-500">Invités</h2>
	  <p class="mt-2 text-gray-300">Découvrez les personnalités présentes.</p>
	  <a href="/Invites" class="inline-block mt-4 bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-700">
		Voir plus
	  </a>
	</div>
  
	<!-- Carte Infos Pratiques -->
	<div class="bg-gray-900 text-white rounded-xl shadow-lg p-6 text-center transform transition duration-300 hover:scale-105">
	  <img src="/src/assets/infos.webp" alt="Infos pratiques" class="mx-auto mb-4 w-20 h-20">
	  <h2 class="text-2xl font-bold text-orange-500">Infos Pratiques</h2>
	  <p class="mt-2 text-gray-300">Accédez aux horaires et détails logistiques.</p>
	  <a href="/infospratiques" class="inline-block mt-4 bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-700">
		Voir plus
	  </a>
	</div>

  
  </section>

  <hr class="my-6 mx-auto w-11/12 sm:w-3/4 md:w-1/2 border-t-4 border-orange-600">


  <main class="container mx-auto p-4 flex justify-center pb-10">
	{Partenaires.length > 0 ? (
	  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
		{Partenaires.map((Partenaires) => (
		  <CardPartenaires {...Partenaires} />
		))}
	  </div>
	) : (
	  <p class="text-gray-600 text-center">
		Aucune programmation disponible pour le moment.
	  </p>
	)}
  </main>

	  
  
	

















  <style>
	@import url('https://fonts.googleapis.com/css2?family=Creepster&display=swap');
  
	.glow {
	  transition: box-shadow 0.3s ease-in-out;
	}
  
	.glow:hover {
	  box-shadow: 0 0 15px #ff8000, 0 0 25px #ff4000;
	}

  </style>










</body>

  </Layout>